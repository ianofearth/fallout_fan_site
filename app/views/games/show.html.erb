<h2><%= @game.title %>  </h2>
<p><%= @game.description %></p>
<p>
  number: <%= @game.number %>
</p>

<p><%= link_to ('Edit ' + @game.title), edit_game_path(@game) %></p>
<p><%= link_to 'Delete', game_path(@game),
                      :data => {:confirm => "Are you sure?",
                                :method => 'delete'}%></p>


<h4>Reviews</h4>
<% if @game.reviews.any? %>
    <% @game.reviews.each do |review| %>
    <h4> <%= review.name %> rated this game <%= review.rating %>/10 </h4>
    <p> <%= review.opinion %> </p>
    <% end %>
<% else %>
  <p> No current reviews.</p>
<% end %>



<p><%= link_to 'Add review', new_game_review_path(@game) %></p>

<% if @previous %>
  <%= link_to 'Previous game', game_path(@previous) %>
<% end %>

<% if @next %>
  <%= link_to 'Next game', game_path(@next) %>
<% end %>
