<h2><%= @game.title %>  </h2>
<p><%= @game.description %></p>
<p>
  number: <%= @game.number %>
</p>

<p><%= link_to ('Edit ' + @game.title), edit_game_path(@game) %></p>
<p><%= link_to 'Delete', game_path(@game),
                      :data => {:confirm => "Are you sure?",
                                :method => 'delete'}%></p>

<% if @previous %>
  <%= link_to 'Previous game', game_path(@previous) %>
<% end %>

<% if @next %>
  <%= link_to 'Next game', game_path(@next) %>
<% end %>
